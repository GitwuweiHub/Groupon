<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_qinzi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="亲子"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_home_qinzi"/>
        <TextView
            android:id="@+id/tv_shenghuofuwu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="生活服务"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_home_shenghuofuwu"/>
        <TextView
            android:id="@+id/tv_waimai"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="外卖"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_home_waimai"/>
        <TextView
            android:id="@+id/tv_xiawucha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="下午茶"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:drawableTop="@drawable/ic_home_xiawucha"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_yanchu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="演出"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_home_yanchu"/>
        <TextView
            android:id="@+id/tv_yiliao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="医疗"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_home_yiliao"/>
        <TextView
            android:id="@+id/tv_xiuxianyule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="休闲娱乐"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_home_xiuxianyule"/>
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="更多"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:drawableTop="@drawable/ic_home_more"/>
    </LinearLayout>

</LinearLayout>